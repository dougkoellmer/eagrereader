{
  "description": [
      "IHTML Elements Definitions",
      "",
      "This describes an XML dialect used by Caja internally for compiling",
      "templates.",
      "See doc/html/templates/ and IHTML.java in the same dir for details."
      ],

  "types": [
      { "key":         "ihtml:attribute",
        "empty":       false,
        "optionalEnd": false,
        "deprecated":  false,
        "description": "specifies an attribute of the containing HTML element" },
      { "key":         "ihtml:call",
        "empty":       true,
        "optionalEnd": false,
        "deprecated":  false,
        "description": "replace with the result of evaluating a template" },
      { "key":         "ihtml:do",
        "empty":       false,
        "optionalEnd": false,
        "deprecated":  false,
        "description": "repeated and conditional content" },
      { "key":         "ihtml:dynamic",
        "empty":       true,
        "optionalEnd": false,
        "deprecated":  false,
        "description": "evaluates to a dynamic text node in place" },
      { "key":         "ihtml:element",
        "empty":       false,
        "optionalEnd": false,
        "deprecated":  false,
        "description": "overrides the name of the containing HTML element" },
      { "key":         "ihtml:else",
        "empty":       true,
        "optionalEnd": false,
        "deprecated":  false,
        "description": "separates the body of an ihtml:do from the alternate" },
      { "key":         "ihtml:eph",
        "empty":       true,
        "optionalEnd": false,
        "deprecated":  false,
        "description": "end of a placeholder" },
      { "key":         "ihtml:message",
        "empty":       false,
        "optionalEnd": false,
        "deprecated":  false,
        "description": "marks a range of rich human readable text" },
      { "key":         "ihtml:template",
        "empty":       false,
        "optionalEnd": false,
        "deprecated":  false,
        "description": "a parameterizable HTML template" },
      { "key":         "ihtml:ph",
        "empty":       false,
        "optionalEnd": false,
        "deprecated":  false,
        "description": "start of a hole in an ihtml:message" }
  ],

  "allowed": [
    "ihtml:attribute",
    "ihtml:call",
    "ihtml:do",
    "ihtml:dynamic",
    "ihtml:element",
    "ihtml:else",
    "ihtml:eph",
    "ihtml:message",
    "ihtml:template",
    "ihtml:ph"
  ]

}
